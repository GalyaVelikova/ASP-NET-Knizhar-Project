@model BecomeKnizharFormModel

@{
    ViewBag.Title = "Become a Knizhar";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-9 offset-xl-3 col-xl-6">
        <h4 class=" heading-margin text-center mb-4">
            @ViewBag.Title
        </h4>
        <form method="post">
            <div class="form-group">
                <div class="col-sm-10">
                    <input asp-for="UserName" class="form-control" placeholder="* Enter your Username here:">
                    <span asp-validation-for="UserName" class="small text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-10">
                    <select asp-for="TownId" class="form-control">
                        <option value="" selected>Choose a town...</option>
                        @foreach (var town in Model.Towns)
                        {
                            <option value="@town.Id">@town.Name</option>
                        }
                    </select>
                    <span asp-validation-for="TownId" class="small text-danger"></span>
                </div>
            </div>
            @*<div class="form-group">
                    <div class="col-sm-10">
                        <input asp-for="ImageUrl" class="form-control" placeholder="* //TO BE MADE FOR UPLOADING AN IMAGE">
                        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                    </div>
                </div>*@

            <input class="btn btn-primary mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}