@model IEnumerable<BookServiceModel>

<div class="row" id="carousel">
    @foreach (var book in Model)
    {
        <div class="card col-md-2 rounded ml-2 mb-2">
            <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" asp-route-information="@book.GetInformation()">
                <img class="card-img-top" src="@book.ImagePath" alt="Card image cap">
            </a>
            <div class="card-body">
                <p class="font-weight-light text-center">@book.AuthorName</p>
                <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" asp-route-information="@book.GetInformation()">
                    <h5 class="text-uppercase text-center text-dark">@book.Name</h5>
                </a>
                <div class="d-flex flex-row d-flex justify-content-center">
                    @if (book.Price != 0)
                    {
                        <div class="p-2">@book.TheBookIsFor</div>
                        <h6 class="p-2 bg-light font-weight-bold text-secondary form-horizontal">@book.Price Bgn</h6>
                    }
                    else
                    {
                        <p class="font-weight-light font-weight-bold text-secondary">@book.TheBookIsFor</p>
                    }
                </div>
                @if (ViewBag.AllowBookEdit == true || User.IsAdmin())
                {
                    <a asp-controller="Books" asp-action="Edit" asp-route-id="@book.Id" class="btn btn-success btn-sm @(book.isArchived ? "disabled" : string.Empty)">Edit</a>
                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-warning btn-sm">Delete</a>
                    <a asp-controller="Books" asp-action="Archive" asp-route-id="@book.Id" class="btn btn-secondary btn-sm @(book.isArchived ? "disabled" : string.Empty)">@(book.isArchived ? "Archived" : "Archive")</a>
                }
            </div>
        </div>
    }
</div>